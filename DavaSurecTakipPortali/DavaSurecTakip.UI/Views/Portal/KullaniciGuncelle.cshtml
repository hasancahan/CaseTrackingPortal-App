@model DavaSurecTakip.Entities.DbEntitiesModels.Users
@{
    ViewData["Title"] = "KullaniciGuncelle";
    Layout = null;
}

<br />
<br />
<h1>Kullanıcı Güncelle</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

<div class="form-box">
    @using (Html.BeginForm("KullaniciGuncelleData", "Portal", FormMethod.Post))
    {
        @Html.Label("Id")
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control" , @readonly = "readonly" })
        <br />

        @Html.Label("Ad")
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        <br />

        @Html.Label("Soyad")
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
        <br />

        @Html.Label("UserName")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        <br />

        @Html.Label("Parola")
        @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control",  })
        <br />
        <button class="btn btn-default" style="background-color:#0c19b4 ; color:white">Kullanıcı Güncelle</button>
        <button class="btn btn-default" style="background-color:#FC1C00 ; color:white">İptal</button>
    }
</div>

<style>
    body {
        background: #f7f7f7;
    }

    .form-box {
        max-width: 500px;
        margin: auto;
        padding: 50px;
        background: #ffffff;
        border: 10px solid #f2f2f2;
    }

    h1, p {
        text-align: center;
    }

</style>